---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4 scroll-slide-left">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-[var(--color-text)]">
              Experience
            </h2>
            <div class="w-[75px] h-[5px] mt-2 rounded-full bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-accent)]"></div>
          </div>

          <div class="lg:col-span-8">
            <div class="relative scroll-stagger">
              {siteConfig.experience.map((exp, index) => (
                <div class="relative mb-12 last:mb-0">
                  {/* Timeline dot at top of card */}
                  <div
                    class="absolute left-1/2 -top-2 w-5 h-5 bg-[var(--color-bg)] border-3 rounded-full -translate-x-1/2 z-20 transition-all duration-300 shadow-[0_0_20px_rgba(0,217,255,0.5)]"
                    style={`border: 3px solid ${siteConfig.accentColor}; background: linear-gradient(135deg, var(--color-primary), var(--color-accent))`}
                  />

                  {/* Connecting line below card */}
                  {index < siteConfig.experience.length - 1 && (
                    <div class="absolute left-1/2 bottom-0 w-0.5 h-12 bg-gradient-to-b from-[var(--color-primary)]/50 to-[var(--color-border)] -translate-x-1/2 translate-y-full z-10" />
                  )}

                  {/* Experience card */}
                  <div class="bg-[var(--glass-bg)] rounded-xl border border-[var(--color-border)] p-6 sm:p-7 md:p-8 hover:shadow-[0_0_35px_rgba(0,217,255,0.2)] hover:border-[var(--color-primary)]/60 transition-all duration-300">
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-5 gap-3">
                      <div class="flex-1">
                        <h3 class="text-xl sm:text-2xl md:text-3xl font-bold text-[var(--color-text)] mb-2">
                          {exp.title}
                        </h3>
                        <p class="text-lg sm:text-xl md:text-2xl text-[var(--color-primary)] font-semibold">
                          {exp.company}
                        </p>
                      </div>
                      <span class="text-sm sm:text-base text-[var(--color-text-muted)] font-medium whitespace-nowrap">
                        {exp.dateRange}
                      </span>
                    </div>

                    <ul class="space-y-3">
                      {exp.bullets.map((bullet) => (
                        <li class="flex items-start gap-3">
                          <span class="inline-block w-2 h-2 rounded-full bg-[var(--color-primary)] mt-2 flex-shrink-0 shadow-[0_0_8px_rgba(0,217,255,0.5)]"></span>
                          <span class="text-sm sm:text-base md:text-lg text-[var(--color-text-muted)] leading-relaxed flex-1">
                            {bullet}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
