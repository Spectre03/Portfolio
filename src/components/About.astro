---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4 scroll-slide-left">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-[var(--color-text)]"
        >
          About Me
        </h2>
        <div class="w-[75px] h-[5px] mt-2 rounded-full bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-accent)]">
        </div>
      </div>

      <div class="lg:col-span-8 space-y-10 md:space-y-12 scroll-fade">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-[var(--color-text-muted)]">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-6">
          <div class="mb-6 scroll-slide-left">
            <h3 class="text-2xl sm:text-3xl md:text-4xl font-bold text-[var(--color-text)] mb-3">
              Skills & Technologies
            </h3>
            <div class="w-[100px] h-[5px] rounded-full bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-accent)]"></div>
          </div>
          
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 sm:gap-5 scroll-stagger">
            {
              siteConfig.skills.map((skill) => (
                <div class="skill-badge group relative">
                  <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)]/20 to-[var(--color-accent)]/20 rounded-xl blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  <span class="relative px-4 py-3 bg-[var(--glass-bg)] border border-[var(--color-border)] text-[var(--color-text)] rounded-xl text-sm sm:text-base font-semibold text-center hover:border-[var(--color-primary)] hover:text-[var(--color-primary)] hover:shadow-[0_0_20px_rgba(0,217,255,0.3)] hover:scale-105 transition-all duration-300 block">
                    {skill}
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skill-badge {
    isolation: isolate;
  }
</style>
